<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Backgrounds -->
    <SolidColorBrush x:Key="MainBackground" Color="#07779C"/>
    <SolidColorBrush x:Key="SecondaryBackground" Color="#06455B"/>

    <!-- Title Bar -->
    <SolidColorBrush x:Key="TitleBarBackground" Color="#06455B"/>
    <SolidColorBrush x:Key="TitleBarForeground" Color="White"/>

    <!-- Controls -->
    <SolidColorBrush x:Key="ControlBackground" Color="#376A7B"/>
    <SolidColorBrush x:Key="ControlFocusedBackground" Color="#0A88B2"/>
    <SolidColorBrush x:Key="ControlDisabledBackground" Color="#D3D3D3"/>
    <SolidColorBrush x:Key="ControlForeground" Color="White"/>
    <SolidColorBrush x:Key="ControlDisabledForeground" Color="#A8A8A8"/>

    <!-- Text -->
    <SolidColorBrush x:Key="MainText" Color="White"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#DCEFF6"/>
    <SolidColorBrush x:Key="SemiBlackForeground" Color="#303030"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="BorderBackground" Color="#06455B"/>
    <SolidColorBrush x:Key="AccentBorder" Color="#0A88B2"/>

    <!-- Highlights/Accents -->
    <SolidColorBrush x:Key="HighlightBackground" Color="#0A88B2"/>
    <SolidColorBrush x:Key="Accent" Color="#12A4D9"/>

    <!-- Colors -->
    <Color x:Key="MainBackgroundColor">#07779C</Color>
    <Color x:Key="SecondaryBackgroundColor">#06455B</Color>
    <Color x:Key="TitleBarBackgroundColor">#06455B</Color>
    <Color x:Key="ControlBackgroundColor">#376A7B</Color>
    <Color x:Key="ControlFocusedBackgroundColor">#0A88B2</Color>
    <Color x:Key="ControlDisabledBackgroundColor">#D3D3D3</Color>
    <Color x:Key="ControlForegroundColor">White</Color>
    <Color x:Key="ControlDisabledForegroundColor">#A8A8A8</Color>
    <Color x:Key="BorderBackgroundColor">#06455B</Color>
    <Color x:Key="AccentBorderColor">#0A88B2</Color>
    <Color x:Key="MainTextColor">White</Color>
    <Color x:Key="SecondaryTextColor">#DCEFF6</Color>
    <Color x:Key="SemiBlackForegroundColor">#303030</Color>
    <Color x:Key="HighlightBackgroundColor">#0A88B2</Color>
    <Color x:Key="AccentColor">#12A4D9</Color>

</ResourceDictionary>
