<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Backgrounds -->
    <SolidColorBrush x:Key="MainBackground" Color="#E8F5E9"/>
    <SolidColorBrush x:Key="SecondaryBackground" Color="#C8E6C9"/>

    <!-- TopBar -->
    <SolidColorBrush x:Key="TopBarBackground" Color="#388E3C"/>
    <SolidColorBrush x:Key="TopBarBackground2" Color="#2E7D32"/>
    <SolidColorBrush x:Key="TopBarForeground" Color="#F1F8E9"/>

    <!-- Buttons -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#66BB6A"/>
    <SolidColorBrush x:Key="ButtonHoverBackground" Color="#388E3C"/>
    <SolidColorBrush x:Key="ButtonFocusedBackground" Color="#2E7D32"/>
    <SolidColorBrush x:Key="ButtonForeground" Color="#F1F8E9"/>
    <SolidColorBrush x:Key="ButtonDisabledBackground" Color="#A5D6A7"/>
    <SolidColorBrush x:Key="ButtonDisabledForeground" Color="#81C784"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="BorderBackground" Color="#A5D6A7"/>
    <SolidColorBrush x:Key="AccentBorder" Color="#388E3C"/>

    <!-- Text -->
    <SolidColorBrush x:Key="MainText" Color="#1B5E20"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#2E7D32"/>

    <!-- Highlights/Accents -->
    <SolidColorBrush x:Key="HighlightBackground" Color="#81C784"/>
    <SolidColorBrush x:Key="Accent" Color="#4CAF50"/>

    <Color x:Key="MainBackgroundColor">#E8F5E9</Color>
    <Color x:Key="SecondaryBackgroundColor">#C8E6C9</Color>
    <Color x:Key="TopBarBackgroundColor">#388E3C</Color>
    <Color x:Key="TopBarBackgroundColor2">#2E7D32</Color>
    <Color x:Key="ButtonBackgroundColor">#66BB6A</Color>
    <Color x:Key="ButtonHoverBackgroundColor">#388E3C</Color>
    <Color x:Key="ButtonFocusedBackgroundColor">#2E7D32</Color>
    <Color x:Key="ButtonForegroundColor">#F1F8E9</Color>
    <Color x:Key="ButtonDisabledBackgroundColor">#A5D6A7</Color>
    <Color x:Key="ButtonDisabledForegroundColor">#81C784</Color>
    <Color x:Key="BorderBackgroundColor">#A5D6A7</Color>
    <Color x:Key="AccentBorderColor">#388E3C</Color>
    <Color x:Key="MainTextColor">#1B5E20</Color>
    <Color x:Key="SecondaryTextColor">#2E7D32</Color>
    <Color x:Key="HighlightBackgroundColor">#81C784</Color>
    <Color x:Key="AccentColor">#4CAF50</Color>


</ResourceDictionary>
