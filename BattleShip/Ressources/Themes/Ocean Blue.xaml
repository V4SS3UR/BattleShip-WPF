<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Backgrounds -->
    <SolidColorBrush x:Key="MainBackground" Color="#E0F7FA"/>
    <SolidColorBrush x:Key="SecondaryBackground" Color="#B2EBF2"/>

    <!-- TopBar -->
    <SolidColorBrush x:Key="TopBarBackground" Color="#00796B"/>
    <SolidColorBrush x:Key="TopBarBackground2" Color="#004D40"/>
    <SolidColorBrush x:Key="TopBarForeground" Color="#E0F2F1"/>

    <!-- Buttons -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#009688"/>
    <SolidColorBrush x:Key="ButtonHoverBackground" Color="#00796B"/>
    <SolidColorBrush x:Key="ButtonFocusedBackground" Color="#004D40"/>
    <SolidColorBrush x:Key="ButtonForeground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ButtonDisabledBackground" Color="#B2DFDB"/>
    <SolidColorBrush x:Key="ButtonDisabledForeground" Color="#80CBC4"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="BorderBackground" Color="#B2DFDB"/>
    <SolidColorBrush x:Key="AccentBorder" Color="#00796B"/>

    <!-- Text -->
    <SolidColorBrush x:Key="MainText" Color="#004D40"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#00695C"/>

    <!-- Highlights/Accents -->
    <SolidColorBrush x:Key="HighlightBackground" Color="#80DEEA"/>
    <SolidColorBrush x:Key="Accent" Color="#006064"/>

    <Color x:Key="MainBackgroundColor">#E0F7FA</Color>
    <Color x:Key="SecondaryBackgroundColor">#B2EBF2</Color>
    <Color x:Key="TopBarBackgroundColor">#00796B</Color>
    <Color x:Key="TopBarBackgroundColor2">#004D40</Color>
    <Color x:Key="ButtonBackgroundColor">#009688</Color>
    <Color x:Key="ButtonHoverBackgroundColor">#00796B</Color>
    <Color x:Key="ButtonFocusedBackgroundColor">#004D40</Color>
    <Color x:Key="ButtonForegroundColor">#FFFFFF</Color>
    <Color x:Key="ButtonDisabledBackgroundColor">#B2DFDB</Color>
    <Color x:Key="ButtonDisabledForegroundColor">#80CBC4</Color>
    <Color x:Key="BorderBackgroundColor">#B2DFDB</Color>
    <Color x:Key="AccentBorderColor">#00796B</Color>
    <Color x:Key="MainTextColor">#004D40</Color>
    <Color x:Key="SecondaryTextColor">#00695C</Color>
    <Color x:Key="HighlightBackgroundColor">#80DEEA</Color>
    <Color x:Key="AccentColor">#006064</Color>


</ResourceDictionary>
