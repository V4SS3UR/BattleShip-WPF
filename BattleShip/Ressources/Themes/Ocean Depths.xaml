<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Backgrounds -->
    <SolidColorBrush x:Key="MainBackground" Color="#EAF4F8"/>
    <SolidColorBrush x:Key="SecondaryBackground" Color="#C5E0E8"/>

    <!-- TopBar -->
    <SolidColorBrush x:Key="TopBarBackground" Color="#086484"/>
    <SolidColorBrush x:Key="TopBarBackground2" Color="#064B61"/>
    <SolidColorBrush x:Key="TopBarForeground" Color="#EAF4F8"/>

    <!-- Buttons -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#4CA3B4"/>
    <SolidColorBrush x:Key="ButtonHoverBackground" Color="#086484"/>
    <SolidColorBrush x:Key="ButtonFocusedBackground" Color="#064B61"/>
    <SolidColorBrush x:Key="ButtonForeground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ButtonDisabledBackground" Color="#C5E0E8"/>
    <SolidColorBrush x:Key="ButtonDisabledForeground" Color="#8FB4C2"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="BorderBackground" Color="#8FB4C2"/>
    <SolidColorBrush x:Key="AccentBorder" Color="#086484"/>

    <!-- Text -->
    <SolidColorBrush x:Key="MainText" Color="#064B61"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#086484"/>

    <!-- Highlights/Accents -->
    <SolidColorBrush x:Key="HighlightBackground" Color="#4CA3B4"/>
    <SolidColorBrush x:Key="Accent" Color="#42A5B3"/>

    <!-- Colors -->
    <Color x:Key="MainBackgroundColor">#EAF4F8</Color>
    <Color x:Key="SecondaryBackgroundColor">#C5E0E8</Color>
    <Color x:Key="TopBarBackgroundColor">#086484</Color>
    <Color x:Key="TopBarBackgroundColor2">#064B61</Color>
    <Color x:Key="ButtonBackgroundColor">#4CA3B4</Color>
    <Color x:Key="ButtonHoverBackgroundColor">#086484</Color>
    <Color x:Key="ButtonFocusedBackgroundColor">#064B61</Color>
    <Color x:Key="ButtonForegroundColor">#FFFFFF</Color>
    <Color x:Key="ButtonDisabledBackgroundColor">#C5E0E8</Color>
    <Color x:Key="ButtonDisabledForegroundColor">#8FB4C2</Color>
    <Color x:Key="BorderBackgroundColor">#8FB4C2</Color>
    <Color x:Key="AccentBorderColor">#086484</Color>
    <Color x:Key="MainTextColor">#064B61</Color>
    <Color x:Key="SecondaryTextColor">#086484</Color>
    <Color x:Key="HighlightBackgroundColor">#4CA3B4</Color>
    <Color x:Key="AccentColor">#42A5B3</Color>

</ResourceDictionary>
