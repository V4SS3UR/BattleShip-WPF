<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Backgrounds -->
    <SolidColorBrush x:Key="MainBackground" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="SecondaryBackground" Color="#E0E0E0"/>

    <!-- TopBar -->
    <SolidColorBrush x:Key="TopBarBackground" Color="#616161"/>
    <SolidColorBrush x:Key="TopBarBackground2" Color="#424242"/>
    <SolidColorBrush x:Key="TopBarForeground" Color="#FAFAFA"/>

    <!-- Buttons -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#9E9E9E"/>
    <SolidColorBrush x:Key="ButtonHoverBackground" Color="#757575"/>
    <SolidColorBrush x:Key="ButtonFocusedBackground" Color="#616161"/>
    <SolidColorBrush x:Key="ButtonForeground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ButtonDisabledBackground" Color="#BDBDBD"/>
    <SolidColorBrush x:Key="ButtonDisabledForeground" Color="#E0E0E0"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="BorderBackground" Color="#BDBDBD"/>
    <SolidColorBrush x:Key="AccentBorder" Color="#757575"/>

    <!-- Text -->
    <SolidColorBrush x:Key="MainText" Color="#424242"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#616161"/>

    <!-- Highlights/Accents -->
    <SolidColorBrush x:Key="HighlightBackground" Color="#B0BEC5"/>
    <SolidColorBrush x:Key="Accent" Color="#78909C"/>

    <!-- Colors -->
    <Color x:Key="MainBackgroundColor">#F5F5F5</Color>
    <Color x:Key="SecondaryBackgroundColor">#E0E0E0</Color>
    <Color x:Key="TopBarBackgroundColor">#616161</Color>
    <Color x:Key="TopBarBackgroundColor2">#424242</Color>
    <Color x:Key="ButtonBackgroundColor">#9E9E9E</Color>
    <Color x:Key="ButtonHoverBackgroundColor">#757575</Color>
    <Color x:Key="ButtonFocusedBackgroundColor">#616161</Color>
    <Color x:Key="ButtonForegroundColor">#FFFFFF</Color>
    <Color x:Key="ButtonDisabledBackgroundColor">#BDBDBD</Color>
    <Color x:Key="ButtonDisabledForegroundColor">#E0E0E0</Color>
    <Color x:Key="BorderBackgroundColor">#BDBDBD</Color>
    <Color x:Key="AccentBorderColor">#757575</Color>
    <Color x:Key="MainTextColor">#424242</Color>
    <Color x:Key="SecondaryTextColor">#616161</Color>
    <Color x:Key="HighlightBackgroundColor">#B0BEC5</Color>
    <Color x:Key="AccentColor">#78909C</Color>

</ResourceDictionary>
