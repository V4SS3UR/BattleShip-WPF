<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Backgrounds -->
    <SolidColorBrush x:Key="MainBackground" Color="#F7EFF8"/>
    <SolidColorBrush x:Key="SecondaryBackground" Color="#E9D8E8"/>

    <!-- TopBar -->
    <SolidColorBrush x:Key="TopBarBackground" Color="#9C89B8"/>
    <SolidColorBrush x:Key="TopBarBackground2" Color="#77628C"/>
    <SolidColorBrush x:Key="TopBarForeground" Color="#F1EBF5"/>

    <!-- Buttons -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#D1A6D0"/>
    <SolidColorBrush x:Key="ButtonHoverBackground" Color="#9C89B8"/>
    <SolidColorBrush x:Key="ButtonFocusedBackground" Color="#77628C"/>
    <SolidColorBrush x:Key="ButtonForeground" Color="#F1EBF5"/>
    <SolidColorBrush x:Key="ButtonDisabledBackground" Color="#E9D8E8"/>
    <SolidColorBrush x:Key="ButtonDisabledForeground" Color="#C9B3CE"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="BorderBackground" Color="#C9B3CE"/>
    <SolidColorBrush x:Key="AccentBorder" Color="#9C89B8"/>

    <!-- Text -->
    <SolidColorBrush x:Key="MainText" Color="#77628C"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#8D6FA4"/>

    <!-- Highlights/Accents -->
    <SolidColorBrush x:Key="HighlightBackground" Color="#C191C1"/>
    <SolidColorBrush x:Key="Accent" Color="#B27BB2"/>

    <Color x:Key="MainBackgroundColor">#F7EFF8</Color>
    <Color x:Key="SecondaryBackgroundColor">#E9D8E8</Color>
    <Color x:Key="TopBarBackgroundColor">#9C89B8</Color>
    <Color x:Key="TopBarBackgroundColor2">#77628C</Color>
    <Color x:Key="ButtonBackgroundColor">#D1A6D0</Color>
    <Color x:Key="ButtonHoverBackgroundColor">#9C89B8</Color>
    <Color x:Key="ButtonFocusedBackgroundColor">#77628C</Color>
    <Color x:Key="ButtonForegroundColor">#F1EBF5</Color>
    <Color x:Key="ButtonDisabledBackgroundColor">#E9D8E8</Color>
    <Color x:Key="ButtonDisabledForegroundColor">#C9B3CE</Color>
    <Color x:Key="BorderBackgroundColor">#C9B3CE</Color>
    <Color x:Key="AccentBorderColor">#9C89B8</Color>
    <Color x:Key="MainTextColor">#77628C</Color>
    <Color x:Key="SecondaryTextColor">#8D6FA4</Color>
    <Color x:Key="HighlightBackgroundColor">#C191C1</Color>
    <Color x:Key="AccentColor">#B27BB2</Color>

</ResourceDictionary>
